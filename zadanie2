using Microsoft.Win32.SafeHandles;
using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Diagnostics.CodeAnalysis;
using System.Diagnostics.Eventing.Reader;
using System.IO.Ports;
using System.Linq;
using System.Net.Http.Headers;
using System.Reflection.Emit;
using System.Runtime.ExceptionServices;
using System.Runtime.InteropServices;
using System.Runtime.Remoting.Lifetime;
using System.Security.Authentication;
using System.Text;
using System.Threading;
using System.Threading.Tasks;

namespace domashechkaMDK
{
    internal class Program
    {
        class Employee
        {
            private string name;
            private double salary;
            public string Name
            {
                get { return name; }
                set { name = value; }
            }
            public double Salary
            {
                get { return salary; }
                set
                {
                    if (value >= 0 && value <= 1000000)
                    {
                        salary = value;
                    }
                    else
                    {
                        Console.WriteLine("Страниц должно быть от 1 до 1000000!");
                    }
                }
            }
            public Employee(string name, double salary)
            {
                Name = name;
                Salary = salary;
            }
            public Employee(string name) : this(name, 50000) { }
            public void Work()
            {
                Console.WriteLine($"{name} работает, зарплата: {salary}.");
            }
        }
        static void Main(string[] args)
        {
            Employee employee1 = new Employee("Иван", 80000);
            employee1.Work();
            Employee employee2 = new Employee("Анна");
            employee2.Work();
            Console.ReadKey();
        }
    }
}
